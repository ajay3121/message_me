<h4 class="ui center aligned medium icon header">
  <i class="circular red paper plane outline  icon"></i>
  Say Something
</h4>
<div class="ui grid">
  <div class="twelve wide column">
    <div class="ui card fluid raised chatbox">
      <div class="content">
        <div class="ui medium feed">
          <h4 class="ui header">Messages</h4>
          <%@messages.each do |message| %>
          <div class="event">
            <div class="content">
              <div class="summary">
                <%=message.user.name %>: <%=message.body %>
              </div>
            </div>
          </div>
          <%end %>
        </div>
      </div>
      <div class="extra content">
        <form class="ui reply form">
            <div class="field">
              <div class="ui fluid icon input">
                <input type="text" placeholder="Enter a message.."></input>
                <i class="bordered inverted green edit icon"></i>
              </div>
            </div>
        </form>
      </div>
    </div>
  </div>

  <div class="four wide column center aligned ">
    <div class="ui vertical inverted pointing menu ">
        <div class="content">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
    </div>
  </div>
</div>
