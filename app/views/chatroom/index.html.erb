<h4 class="ui center aligned medium icon header">
  <i class="circular red paper plane outline  icon"></i>
  Say Something
</h4>
<div class="ui grid">
  <div class="twelve wide column">
    <div class="ui card fluid raised chatbox">
      <div class="content">
        <div class="ui medium feed">
          <h4 class="ui header">Messages</h4>
          <%=render @messages %>
        </div>
      </div>
      <div class="extra content">
      <%= form_for @message, html: { class: "ui reply form", role: "form" } do |f| %>
        <div class="field">
          <div class="ui fluid icon input">
            <%= f.text_field :body %>
            <%= f.button '<i class="bordered inverted green edit icon"></i>'.html_safe %>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>

  <div class="four wide column center aligned ">
    <div class="ui vertical inverted pointing menu ">
        <div class="content">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
    </div>
  </div>
</div>
